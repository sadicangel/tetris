{
	"compilerOptions": {
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"preserveValueImports": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "NodeNext",
		"noEmit": true,
		"ignoreDeprecations": "5.0",
		"target": "ESNext",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@lib/*": [
				"src/lib/*"
			],
			"@assets/*": [
				"src/assets/*"
			]
		}
	},
	"include": [
		"ambient.d.ts",
		"./types/**/$types.d.ts",
		"./vite.config.js",
		"./vite.config.ts",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.svelte",
		"./tests/**/*.js",
		"./tests/**/*.ts",
		"./tests/**/*.svelte"
	],
	"exclude": [
		"./node_modules/**",
		"./[!ambient.d.ts]**",
		"./svelte.config.js",
		"./main.js",
	]
}